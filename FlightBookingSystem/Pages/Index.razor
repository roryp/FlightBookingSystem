@page "/"

<h3>Flight Booking System</h3>

<div>
    <h4>Search Flights</h4>
    <div>
        <label for="origin">Origin:</label>
        <input type="text" id="origin" @bind="origin" />
    </div>
    <div>
        <label for="destination">Destination:</label>
        <input type="text" id="destination" @bind="destination" />
    </div>
    <div>
        <label for="departureDate">Departure Date:</label>
        <input type="date" id="departureDate" @bind="departureDate" />
    </div>
    <div>
        <label for="returnDate">Return Date:</label>
        <input type="date" id="returnDate" @bind="returnDate" />
    </div>
    <button @onclick="SearchFlights">Search</button>
</div>

@if (flights != null && flights.Any())
{
    <h4>Search Results</h4>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in flights)
            {
                <tr>
                    <td>@flight.Airline</td>
                    <td>@flight.Origin</td>
                    <td>@flight.Destination</td>
                    <td>@flight.DepartureTime</td>
                    <td>@flight.ArrivalTime</td>
                    <td>@flight.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string origin;
    private string destination;
    private DateTime departureDate;
    private DateTime returnDate;
    private List<Flight> flights;

    private void SearchFlights()
    {
        // Implement flight search logic here
    }
}
